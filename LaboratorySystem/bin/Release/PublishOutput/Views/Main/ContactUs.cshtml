<script>
    $(document).ready(function () {
      
        $("#saveorupdatebtn").click(function () {

            var form = document.querySelector('#contactusform');
            console.log(objectifyForm($("#contactusform").serializeArray()))
            if (form.reportValidity()) {
                var _posturl = _Main_ContactUs_NewRequest;
                
                MakeRequest(_posturl, "POST", objectifyForm($("#contactusform").serializeArray()), "json",
                    function (jqXHR, settings) {
                        //For Before Send
                        $('.loadscreen').fadeIn();
                    },
                    function (data, status, xhr) {
                        //For Success

                        $('.loadscreen').fadeOut();

                        var rs = WebResponse(data);
                        if (rs.ResponseType == "swal-sucsess") {
                            $("#contactusform").trigger("reset");
                        }
                    },
                function (jqXhr, textStatus, errorMessage) {
                    //For Error
                    $('.loadscreen').fadeOut();
                    WebResponse(new { ResponseType: "toastr-error", description: errorMessage, title: "Something went wrong (C)", data: {} });
                });
            }
            return false;
        })
    })
</script>	
	

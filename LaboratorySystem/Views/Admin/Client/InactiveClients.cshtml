<script>
    var currentmenu = 5;
    var allloaded = false;
    $(document).ready(function () {


        MakeRequest(_Admin_Client_GetList, "POST", {"status":false}, "json",
function (jqXHR, settings) {
    //For Before Send
    $('.loadscreen').fadeIn();
},
function (data, status, xhr) {
    //For Success
    $('.loadscreen').fadeOut();
    var rs = WebResponse(data);
    var outputdt = {};
    if (rs.ResponseType == "Simple") {
        var dt = rs.ResponseData.clientjson;
        outputdt = dt;
    }

    $('#clienttable').on('init.dt', function () {
        allloaded = true;
    }).DataTable({
        data: outputdt,
        columns: [
            { data: 'ClientDetailID' },
            { data: 'CompanyName' },
            { data: 'FullName' },
            { data: 'Subdomain' },
            { data: 'status' },
            { data: 'PlanName' },
            { data: 'ClientDetailID' },
            { data: 'ClientDetailID', className: 'editcolumn' }
        ],
        "columnDefs": [
            {
                "render": function (data, type, row) {
                    var returnstring = '<a href="/Admin/Client?IsEdit=1&EditId=' + data + '" title="Edit"><button type="button" class="btn btn-success "><i class="nav-icon i-Pen-2 "></i></button></a>';
                    if (row["IsBlock"] == true) {
                        returnstring += '&nbsp;&nbsp;<i style="font-size:25px;color:red;cursor:pointer" data-id="' + row["SystemUserID"] + '" title="Unblock User" class="nav-icon i-Lock-User unblockuser"></i>';
                    }
                    return returnstring;
                },
                "targets": 7
            },
            {
                "render": function (data, type, row) {
                    if (data == "Active") {
                        return '<span class="badge badge-success">Active</span>';
                    }

                    else if (data == "Inactive") {
                        return '<span class="badge badge-warning">Inactive</span>';
                    }
                    else {
                        return data;
                    }
                },
                "targets": 4
            },
            {
                "render": function (data, type, row) {
                    return '<button type="button" class="btn btn-info viewdetail" title="View Detail" class="viewdetail" data-id="' + data + '"><i class="nav-icon i-Magnifi-Glass1"></i></button>';
                },
                "targets": 6
            }
        ]
    });


},
function (jqXhr, textStatus, errorMessage) {
    //For Error
    $('.loadscreen').fadeOut();
    WebResponse(new { ResponseType: "toastr-error", description: "CL-Error", title: "Something went wrong (C)", data: {} });
});

    })
</script>
